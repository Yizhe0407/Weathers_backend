generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  email    String    @unique
  counties UserCounty[]  // 使用中間表來處理多對多關聯
}

model County {
  id      Int       @id @default(autoincrement())
  county  String
  towns   Town[]
  users   UserCounty[]  // 使用中間表來處理多對多關聯
}

model Town {
  id       Int     @id @default(autoincrement())
  town     String
  county   County  @relation(fields: [countyId], references: [id])
  countyId Int
}

// 多對多關聯的中間表
model UserCounty {
  userId   Int
  countyId Int
  user     User    @relation(fields: [userId], references: [id])
  county   County  @relation(fields: [countyId], references: [id])
  @@id([userId, countyId]) // 設置複合主鍵來表示 user 和 county 的唯一對應
}
