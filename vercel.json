{
    "version": 2,
    "builds": [
      {
        "src": "app.js",
        "use": "@vercel/node",
        "config": { "includeFiles": ["config/**", "controllers/**", "models/**", "routes/**"] }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "app.js"
      }
    ]
  }
  