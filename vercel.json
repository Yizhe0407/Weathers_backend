{
    "version": 2,
    "rewrites": [{ "source": "/(.*)", "destination": "/api" }],
    "builds": [
     {
      "src": "app.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
     }
    ],
    "routes": [
     {
      "src": "/(.*)",
      "dest": "app.js",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
     }
    ]
   }